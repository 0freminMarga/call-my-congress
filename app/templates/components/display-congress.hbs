<div>
  {{t "geography.state"}}: {{congress.district.state}} {{t "geography.district"}}: {{congress.district.number}}
</div>

<div>
  {{#each congress.representatives as |representative key|}}
    <div>
    <strong>{{t "congress.representative"}}: {{key}}</strong>
    {{representative.phone}}
    {{representative.title}} {{representative.person.firstname}} {{representative.person.lastname}} ({{representative.party}})
    </div>
  {{/each}}
</div>

<div>
  {{#each congress.senators as |senator key|}}
    <div>
    <strong>{{t "congress.senator"}}: {{key}}</strong>
    {{senator.phone}}
    {{senator.title}} {{senator.person.firstname}} {{senator.person.lastname}} ({{senator.party}})
    </div>
  {{/each}}
</div>

<button {{action "returnHome"}}>{{t "general.back"}}</button>