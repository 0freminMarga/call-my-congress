
<div>
  State: {{model.district.state}} District: {{model.district.number}}
</div>

<div>
  num reps: {{model.representatives.length}}
  {{#each model.representatives as |representative key|}}
    <div>
    <strong>representative {{key}}</strong>
    {{representative.phone}}
    {{representative.title}} {{representative.person.firstname}} {{representative.person.lastname}} ({{representative.party}})
    </div>
  {{/each}}
</div>

<div>
  num senators: {{model.senators.length}}
  {{#each model.senators as |senator key|}}
    <div>
    <strong>senator {{key}}</strong>
    {{senator.phone}}
    {{senator.title}} {{senator.person.firstname}} {{senator.person.lastname}} ({{senator.party}})
    </div>
  {{/each}}
</div>
